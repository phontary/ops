generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Operation {
  id                String   @id @default(uuid())
  op_id             String   @unique
  datum             DateTime
  patient_id        String?
  diagnose          String
  op_anlage         String?
  anasthesie_typ    String
  lagerung          String?
  op_team           String[]
  op_verlauf        String?
  pathologie_befund String?
  dauer_min         Int
  blutverlust_ml    Int?
  materials         Json[]
  times             Json[]
  media             Json[]
  raw_ocr           Json
  complete          Boolean  @default(false)
  created_at        DateTime @default(now())
  stats_icd         String[]

  @@map("operations")
}
